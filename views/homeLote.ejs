    <link rel="icon" href="https://aemassets.grupoccr.com.br/content/dam/sites-modulares/pt/media/images/icones/ccr.ico" type="image/x-icon">

</head>
<body>
    <div class="centered-container">

        <img id="logo" src="/images/logo2-icon.png" alt="Seu Logo">
        <br>
        <br>
        <br>
        <h1 id="divMenor">Abaixo você encontra informações sobre o status da sua TAG!</h1>

    </div>
  
<% for (let i = 0; i < qrDataArray.length; i++) { %>
    <div id="infos">
        
            <p class="info-item"><span class="info-label">Placa:</span> <span class="info-value"><%= qrDataArray[i].infoVeiculo.placa %></span></p>
            <p class="info-item"><span class="info-label">Órgão:</span> <span class="info-value"><%= qrDataArray[i].infoVeiculo.orgao %></span></p>
            <p class="info-item"><span class="info-label">N° da TAG:</span> <span class="info-value"><%= qrDataArray[i].infoVeiculo.n_tag %></span></p>
            <p class="info-item"><span class="info-label">Data de vigência:</span> <span class="info-value"><%= qrDataArray[i].infoVeiculo.data_formatada %></span></p>
            <!-- Outros campos conforme necessário -->
            <div>
                <img src="<%= qrDataArray[i].qrCode %>" alt="QR Code">
            </div>
        
    </div>
<% } %>
    
    

    <button id="newSearchContainer">
        <a href="/index" id="newSearch">Nova Busca</a>
    </button>

    <div class="centered-container2">
        <h1 id="frase">CCR \ VIVA SEU CAMINHO<span class="pontos"></span><i class="fas fa-car-side"></i></h1>
